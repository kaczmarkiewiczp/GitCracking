<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_repositories_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:text="Repository Name" />

    <TextView
        android:id="@+id/tv_repositories_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="Repository Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/repositories_private"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_lock_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:text="Private"
                tools:text="Private" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repositories_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_code_black_24dp"/>
            <TextView
                android:id="@+id/tv_repositories_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="unknown"
                android:paddingLeft="4dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repositories_forks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_source_fork"/>
            <TextView
                android:id="@+id/tv_repositories_forks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:paddingLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repositories_stars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_star"/>
            <TextView
                android:id="@+id/tv_repositories_stars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repositories_storage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_storage_black_24dp"/>
            <TextView
                android:id="@+id/tv_repositories_storage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:text="0 KB"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#dadada" />
</LinearLayout>